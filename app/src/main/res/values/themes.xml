<resources>

    <style name="Theme.Topcoders" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/lato_fonts_family</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
        <item name="textColorOption">@color/color_option_light</item>
        <item name="searchBoxColor">@color/box_search_light</item>
    </style>

    <style name="Theme.Topcoders.Main" parent="Theme.Topcoders" />

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
    </style>
</resources>