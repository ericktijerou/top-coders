<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearance.CircleImageView" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.TopCoders.Option" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/textColorOption</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="drawableTint">?attr/textColorOption</item>
        <item name="android:drawablePadding">@dimen/spacing_xs</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/lato_fonts_family</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_fonts_family</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.015625</item>
    </style>

    <style name="TextAppearance.App.Search.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/lato_fonts_family</item>
        <item name="android:fontFamily">@font/lato_fonts_family</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:letterSpacing">0.015625</item>
    </style>

    <style name="TextAppearance.App.Search.EditText" parent="TextAppearance.App.Search.Text">
        <item name="android:background">@null</item>
        <item name="android:hint">Search</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Search.Text</item>
        <item name="drawableTint">?attr/textColorOption</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
    </style>

</resources>