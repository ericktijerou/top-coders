<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.ericktijerou.topcoders.ui.entity.UserView" />

        <variable
            name="listener"
            type="com.ericktijerou.topcoders.ui.home.adapter.UserItemListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->listener.onUserClick(model)}"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:avatarUrl="@{model.avatarUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.CircleImageView" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_story_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{model.name}"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@id/tv_author_and_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            app:layout_constraintTop_toTopOf="@id/iv_avatar" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_author_and_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{model.username}"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_story_title"
            app:layout_constraintTop_toBottomOf="@id/tv_story_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>